#!/bin/bash 

case $(($RANDOM % 6 + 1)) in
    1)
        printf '___________\n|         |\n|         |\n|    *    |\n|         |\n|_________|\n' ;; 
    2)
        printf '___________\n|         |\n|  *      |\n|         |\n|     *   |\n|_________|\n' ;; 
    3)
        printf '___________\n|         |\n|  *      |\n|    *    |\n|      *  |\n|_________|\n' ;; 
    4)
        printf '___________\n|         |\n|  *   *  |\n|         |\n|  *   *  |\n|_________|\n' ;; 
    5)
        printf '___________\n|         |\n|  *   *  |\n|    *    |\n|  *   *  |\n|_________|\n' ;; 
    6)
        printf '___________\n|         |\n|  * * *  |\n|         |\n|  * * *  |\n|_________|\n' ;; 
esac
